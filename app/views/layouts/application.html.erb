<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="navbar navbar-default">
    <div class="container">
      <nav>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Blocitoff", root_path, :class => 'navbar-link' %></li>
          <li><%= link_to "About", welcome_about_path, :class => 'navbar-link '%></li>
          <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %></li>
          <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %></li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <ul class="nav nav-tabs">
      <div class="pull-right">
        <% if user_signed_in? %>
        <div class="pull-right">
          <li>Signed in as: <strong><%= current_user.email %></strong></li>
          <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "My To Do List", user_session_path, :class => 'navbar-link' %> |
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        </div>
        <% else %>
        <!-- <div>
          <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %>
        </div> -->
        <% end %>
      </ul>
    </div>

    <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
    <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
